#:kivy 1.11.1

<StartMenu>:
    BoxLayout:
        BoxLayout:
            id: leftBox
            orientation: 'vertical'
            size_hint: (0.25,1)
            Button:
                text: "New Project"
                on_press: root.new_project()
            Button:
                text: "Load Project"
            Button:
                text: "Quit"
                on_press: root.quit()
        BoxLayout:
            mix_size: root.ids.leftBox.width
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Label1'
                Label:
                    text: 'Label2'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Label1'
                Label:
                    text: 'Label2'








